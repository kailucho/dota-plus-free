{
  "name": "@dba/server",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/server.js",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "build:lambda": "esbuild src/lambda.ts --bundle --platform=node --format=esm --target=node20 --outfile=dist/lambda.mjs --external:@dba/web",
    "deploy:dev": "npm run build:lambda && serverless deploy --stage dev",
    "deploy:prod": "npm run build:lambda && serverless deploy --stage prod",
    "remove:dev": "serverless remove --stage dev",
    "remove:prod": "serverless remove --stage prod"
  },
  "dependencies": {
    "@dba/shared": "*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "multer": "^2.0.2",
    "openai": "^5.12.2",
    "zod": "^3.23.8",
    "serverless": "^3.39.0",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.2.1",
    "esbuild": "^0.23.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}

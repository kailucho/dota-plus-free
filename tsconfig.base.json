{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // <= CAMBIO CLAVE
    "moduleResolution": "NodeNext", // <= CAMBIO CLAVE
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["node"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
